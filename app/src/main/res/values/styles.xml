<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TankInfoStyleDefault" parent="@android:style/TextAppearance">
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TankInfoError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

    <style name="TankInfoDefault" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
